
@model IEnumerable<ProiectDAW.Models.Product> 



@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
<div class="bara-cautare">
    <div style="color:white; margin-bottom: 1rem;">
        <div>
            <h5>Cauta dupa numele produsului</h5>
        </div>
        <div style="margin-bottom: 20px;">
        @Html.TextBox("searchString")
        <input type="submit" value="Filtreaza" />
        </div>
    </div>
    <a class="btn btn-info" style="margin-right:5px;" href="/Products/Index2">Sorteaza alfabetic cresc.</a>

    <a class="btn btn-info" style="margin-right:5px;" href="/Products/Index3">Sorteaza alfabetic desc.</a>

    <a class="btn btn-info" style="margin-right:5px;" href="/Products/Index4">Sorteaza dupa rating cresc.</a>

    <a class="btn btn-info" href="/Products/Index5">Sorteaza dupa rating desc.</a>
    
</div>
}

<section class="item-container" id="content-item-container">
    @foreach (ProiectDAW.Models.Product produs in ViewBag.Produse)
    {
        <div class="game-card">

            @Html.Partial("ProdusInfo", produs)

            <div class="panel-footer" style="margin-bottom: 1rem; margin-top: 0.5rem">
                
                <a class="btn btn-info" href="/Products/Show/@produs.ProdusID" style="margin-right: 0.7rem">Informatii</a>
                @Html.ActionLink("Cumpara", "OrderNow", "ShoppingCart", new { id = produs.ProdusID }, new { @class = "btn btn-success"})
                
            </div>
        </div>
    }
</section>







