@model ProiectDAW.Models.Product

<h2>Trimite un Request</h2>

@using (Html.BeginForm(actionName: "NewRequest", controllerName: "Products", method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Titlu", "Titlu Produs")
    <br />
    @Html.TextBoxFor(m => m.Titlu, null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Titlu, null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Descriere", "Continut Produs")
    <br />
    @Html.TextAreaFor(m => m.Descriere, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Descriere, null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Pret", "Pret Produs")
    <br />
    @Html.TextBoxFor(m => m.Pret, null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Pret, null, new { @class = "text-danger" })
    <br /><br />



    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.CategorieID, new SelectList(Model.Categ, "Value", "Text"),
    "Selectati categoria", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.CategorieID, "", new { @class = "text-danger" })
    <br />
    <br />

    <label>Incarca Imagine</label>
    <input type="file" name="ImageFile">

    <br />
    <br />

    <button class="btn btn-sm btn-success" type="submit">Trimite request</button>
}