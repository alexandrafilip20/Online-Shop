@model ProiectDAW.Models.Category

<h2>Editare categorie</h2>

<form method="post" action="/Categories/Edit/@Model.CategorieID">

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.CategorieID)

    @Html.Label("CategorieNume", "Denumire categorie")
    <br />
    @Html.Editor("CategorieNume")
    <br /><br />

    <button class="btn btn-success" type="submit">Modifica categoria</button>
</form>

