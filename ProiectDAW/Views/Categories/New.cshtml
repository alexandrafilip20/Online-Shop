
@{
    ViewBag.Title = "Adaugare Categorie";
}

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

<form method="post" action="/Categories/New">

    @Html.Label("CategorieNume", "Denumire categorie")
    <br />

    @Html.TextBox("CategorieNume", null, new { @class = "form-control" })
    <br /><br />

    <button class="btn btn-success" type="submit">Adauga categorie</button>
</form>

