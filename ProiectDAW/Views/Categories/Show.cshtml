@model ProiectDAW.Models.Category
@{
    ViewBag.Titlu = "Afisare categorie";
}

<h2>@ViewBag.Titlu</h2>

<p>@Model.CategorieNume</p>

<form method="post" action="/Categories/Delete/@Model.CategorieID">

    @Html.HttpMethodOverride(HttpVerbs.Delete)

    <button class="btn btn-success" type="submit">Sterge categoria</button>

</form>
<br />
<a class="btn btn-success" href="/Categories/Index/">Afisare lista categorii</a>

